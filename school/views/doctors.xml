<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- add new button to actions server -->
        <!-- add "Create Calendar" button -->
        <record id="action_create_calendar" model="ir.actions.server">
            <field name="name">Create Calendar</field>
            <field name="model_id" ref="model_school_doctors"/>
            <field name="binding_model_id" ref="school.model_school_doctors"/>
            <!-- set this action is appear in form or list -->
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <!-- action -->
            <!-- this action is writed for function outside of current model -->
            <!-- such as: action_school_create_calendar is from the wizard (outside of current model) -->
            <!-- don't understand what is the other codes used for -->
            <field name="code">
                if record:
                    action_values = env.ref('school.action_school_create_calendar').sudo().read()[0]
                    action_values.update({'context': env.context})
                    action = action_values
            </field>
        </record>

        <record id="school_doctors_tree" model="ir.ui.view">
            <field name="name">school.doctors.tree</field>
            <field name="model">school.doctors</field>
            <field name="arch" type="xml">
                <!-- multi_edit is to allow multi edit in tree view -->
                <!-- add expand="1" to show all the records at first loading page -->
                <tree multi_edit="1" expand="1">
                    <!-- optional="show" and optional="hide" to show/hide column by default -->
                    <field name="sequence" readonly="1" optional="show"/>
                    <field name="name" optional="show"/>
                    <field name="photo" optional="show"/>
                    <field name="doctor_age" optional="show"/>
                    <field name="doctor_dob" optional="show"/>
                    <field name="doctor_gender" optional="show"/>
                    <field name="doctor_blood_group" optional="show"/>
                    <field name="nationality" optional="show"/>
                    <field name="doctor_calendar_count" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="school_doctors_kanban" model="ir.ui.view" >
            <field name="name">school.doctors.kanban</field>
            <field name="model">school.doctors</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="photo"/>
                    <field name="doctor_age"/>
                    <field name="doctor_dob"/>
                    <field name="doctor_gender"/>
                    <field name="doctor_blood_group"/>
                    <field name="nationality"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>
                                            Name:
                                            <field name="name"/>
                                        </li>
                                        <li>
                                            Age:
                                            <field name="doctor_age"/>
                                        </li>
                                        <li>
                                            Gender:
                                            <field name="doctor_gender"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="school_doctors_form" model="ir.ui.view">
            <field name="name">school.doctors.form</field>
            <field name="model">school.doctors</field>
            <field name="arch" type="xml">
                <form string="Doctor View/Edit">
                    <header>
                        <button id="create_calendar" string="Create Calendar" name="%(action_school_create_calendar)d" type="action" class="btn-primary"/>
                    </header>
                    <sheet>
                        <!-- smart button section -->
                        <!-- this is a top left button inside form, which count and redirect -->
                        <div class="oe_button_box" name="button_box">
                            <!-- action to redirect is inside "name" -->
                            <button name="action_open_calendar" type="object"
                                class="oe_stat_button" icon="fa-calendar">
                                <div class="o_stat_info">
                                    <!-- show count number -->
                                    <field name="doctor_calendar_count" class="o_stat_value"/>
                                    <!-- show text "Calendars" or "Calendar" based on count number -->
                                    <span class="o_stat_text" attrs="{'invisible': [('doctor_calendar_count', '&lt;', 2)]}"> Calendars</span>
                                    <span class="o_stat_text" attrs="{'invisible': [('doctor_calendar_count', '&gt;', 1)]}"> Calendar</span>
                                </div>
                            </button>
                        </div>
                        <!-- ribbon for archive / unarchive -->
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="photo" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <field name="sequence" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="doctor_id"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="doctor_age"/>
                            <field name="doctor_dob"/>
                        </group>
                        <group>
                            <field name="doctor_gender" invisible="context.get('hide_gender')"/>
                            <field name="doctor_blood_group"/>
                        </group>
                        <group>
                            <field name="nationality"/>
                            <field name="doctor_calendar_count"/>
                            <!-- show archive / unarchive in form -->
                            <field name="active" invisible="1"/>
                        </group>
<!--                        <notebook>-->
<!--                            <page name="calendars" string="Calendars">-->
<!--                                <field name="calendar_ids" readonly="1">-->
<!--                                    <tree>-->
<!--                                        <field name="sequence" readonly="1"/>-->
<!--                                        <field name="doctor_id"/>-->
<!--                                        <field name="doctor_age"/>-->
<!--                                        <field name="doctor_gender"/>-->
<!--                                        <field name="date"/>-->
<!--                                        <field name="state"/>-->
<!--                                    </tree>-->
<!--                                    <form>-->
<!--                                        <div class="oe_title">-->
<!--                                            <h1>-->
<!--                                                <field name="sequence" readonly="1"/>-->
<!--                                            </h1>-->
<!--                                        </div>-->
<!--                                        <group>-->
<!--                                            <field name="doctor_id"/>-->
<!--                                            <field name="doctor_age"/>-->
<!--                                            <field name="doctor_gender" readonly="1" force_save="1"/>-->
<!--                                            <field name="date"/>-->
<!--                                        </group>-->
<!--                                    </form>-->
<!--                                </field>-->
<!--                            </page>-->
<!--                        </notebook>-->
                    </sheet>
                    <!-- chatbox section -->
                    <!-- we need to inherit this 2 model inside our model to make this chatbox work -->
                    <!-- _inherit = ['mail.thread', 'mail.activity.mixin'] -->
<!--                    <div class="oe_chatter">-->
<!--                        <field name="message_follower_ids"/>-->
<!--                        <field name="activity_ids"/>-->
<!--                        <field name="message_ids"/>-->
<!--                    </div>-->
                </form>
            </field>
        </record>

        <record id="school_doctors_search" model="ir.ui.view">
            <field name="name">school.doctors.search</field>
            <field name="model">school.doctors</field>
            <field name="arch" type="xml">
                <search string="Doctors">
                    <field name="name"/>
                    <field name="photo"/>
                    <field name="doctor_age"/>
                    <field name="doctor_dob"/>
                    <field name="doctor_gender"/>
                    <field name="doctor_blood_group"/>
                    <field name="nationality"/>
                    <separator/>
                    <filter name="doctor_age_old" string="Age More Than 40" domain="[('doctor_age', '>=', 40)]"/>
                    <filter name="doctor_age_young" string="Age Less Than 40" domain="[('doctor_age', '&lt;', 40)]"/>
                    <filter name="doctor_gender" string="Male" domain="[('doctor_gender', '=', 'male')]"/>
                    <filter name="doctor_gender" string="Female" domain="[('doctor_gender', '=', 'female')]"/>
                    <separator/>
                    <!-- filter for archive / unarchive -->
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <!-- group by name is difference than field name, or else will be issue when set context in ir.actions.act_window below -->
                        <filter string="Gender" name="group_doctor_gender" domain="[]" context="{'group_by': 'doctor_gender'}"/>
                    </group>
                    <!-- search panel is a left sidebar filter -->
                    <searchpanel>
                        <!-- add searchpanel doctor_gender to this view causing issue -->
<!--                        <field name="doctor_gender" string="Gender" icon="fa-cutlery" color="#875A7B" enable_counters="1"/>-->
                        <field name="doctor_blood_group" select="multi" string="Blood Group" icon="fa-truck" enable_counters="1"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_school_doctors">
            <field name="name">Doctors</field>
            <field name="res_model">school.doctors</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">[]</field>
            <!-- set default group by and filter -->
            <!-- add search_default_group_doctor_gender to this view causing issue -->
<!--            <field name="context">{"search_default_group_doctor_gender": 1, "search_default_doctor_age_old": 1}</field>-->
            <field name="context">{"search_default_doctor_age_old": 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new doctor
                </p>
            </field>
        </record>

        <menuitem id="menu_doctors" name="Doctors" parent="menu_school"/>
        <menuitem id="school_doctors" name="Doctors" parent="menu_doctors"
                  action="action_school_doctors"/>
    </data>
</odoo>